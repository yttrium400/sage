{
  "name": "sage-code-assistant",
  "displayName": "Sage Code Assistant",
  "description": "AI-powered Python coding assistant with local LLM and semantic search",
  "version": "0.2.0",
  "publisher": "sage",
  "repository": {
    "type": "git",
    "url": "https://github.com/yttrium400/sage"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "code-assistant",
    "python",
    "ollama",
    "local-llm",
    "semantic-search"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeAssistant.openChat",
        "title": "Sage: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "codeAssistant.explainCode",
        "title": "Sage: Explain Code",
        "icon": "$(question)"
      },
      {
        "command": "codeAssistant.generateCode",
        "title": "Sage: Generate Code",
        "icon": "$(sparkle)"
      },
      {
        "command": "codeAssistant.refactorCode",
        "title": "Sage: Refactor Code",
        "icon": "$(tools)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeAssistant",
          "title": "Sage Assistant",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "codeAssistant": [
        {
          "type": "webview",
          "id": "codeAssistant.chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "codeAssistant.explainCode",
          "when": "editorHasSelection",
          "group": "sage@1"
        },
        {
          "command": "codeAssistant.refactorCode",
          "when": "editorHasSelection && editorLangId == python",
          "group": "sage@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codeAssistant.openChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "codeAssistant.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Sage Code Assistant",
      "properties": {
        "sage.model": {
          "type": "string",
          "default": "qwen2.5-coder:3b",
          "description": "Ollama model to use for code generation"
        },
        "sage.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {}
}
