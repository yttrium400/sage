{
  "name": "code-assistant",
  "displayName": "Code Assistant",
  "description": "AI-powered coding assistant with futuristic UI",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeAssistant.openChat",
        "title": "Code Assistant: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "codeAssistant.explainCode",
        "title": "Code Assistant: Explain Code"
      },
      {
        "command": "codeAssistant.generateCode",
        "title": "Code Assistant: Generate Code"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeAssistant",
          "title": "Code Assistant",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "codeAssistant": [
        {
          "type": "webview",
          "id": "codeAssistant.chatView",
          "name": "Chat"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codeAssistant.openChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {}
}
